- title t('.title')

.navbar.navbar-default
  = form_tag foodcoop_ordergroups_path, method: :get, remote: true, 'data-submit-onchange' => true, class: 'navbar-form' do
    .form-group
      = text_field_tag :name, params[:name], class: 'form-control', placeholder: t('.name')
    .checkbox
      %label{for: 'only_active'}
        = check_box_tag 'only_active', 1, params[:only_active]
        = t '.only_active'
        %small= t '.only_active_desc'

#ordergroups
  = render :partial => "ordergroups"
